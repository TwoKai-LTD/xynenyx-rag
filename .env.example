# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# Alternative name (also supported)
# SUPABASE_SERVICE_KEY=your-service-role-key

# LLM Service Configuration
LLM_SERVICE_URL=http://localhost:8003
LLM_SERVICE_TIMEOUT=60

# AWS S3 Settings (optional, for future document storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# RSS Feed Settings
DEFAULT_UPDATE_FREQUENCY=hourly
RSS_REQUEST_TIMEOUT=30
RSS_MAX_RETRIES=3

# HTML Extraction Settings
HTML_REQUEST_TIMEOUT=30
HTML_MAX_RETRIES=3
HTML_USER_AGENT=Mozilla/5.0 (compatible; XynenyxBot/1.0)

# Chunking Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Embedding Settings
EMBEDDING_BATCH_SIZE=20
EMBEDDING_MAX_RETRIES=3
EMBEDDING_RETRY_DELAY=1.0

# Vector Search Settings
DEFAULT_TOP_K=10
MIN_SIMILARITY_SCORE=0.0

# Hybrid Search Settings
USE_HYBRID_SEARCH=true
BM25_TOP_K=10
VECTOR_TOP_K=10
RRF_K=60

# Reranking Settings
USE_RERANKING=true
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_TOP_N=20

# Service Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8002

# CORS (optional, defaults to allow all)
# CORS_ORIGINS=*
